<form id="registrationForm" class="max-w-xl mx-auto">
  <div class="mb-4">
    <label for="companyName" class="block text-gray-700 mb-2">Bedrijfsnaam</label>
    <input type="text" id="companyName" name="companyName" required 
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
  </div>
  <div class="mb-4">
    <label for="name" class="block text-gray-700 mb-2">Contactpersoon</label>
    <input type="text" id="name" name="name" required 
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
  </div>
  <div class="mb-4">
    <label for="email" class="block text-gray-700 mb-2">E-mailadres</label>
    <input type="email" id="email" name="email" required 
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
  </div>
  <div class="mb-4">
    <label for="phone" class="block text-gray-700 mb-2">Telefoonnummer</label>
    <input type="tel" id="phone" name="phone" required 
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
  </div>
  <div class="mb-4">
    <label for="website" class="block text-gray-700 mb-2">Website</label>
    <input type="url" id="website" name="website" 
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
  </div>
  <div class="mb-6">
    <label class="flex items-center">
      <input type="checkbox" required class="w-4 h-4 text-blue-600 mr-2 rounded focus:ring-blue-500">
      <span class="text-sm text-gray-700">Ik ga akkoord met de algemene voorwaarden</span>
    </label>
  </div>
  <button type="submit" 
    class="w-full bg-blue-600 text-white py-4 rounded-lg text-lg font-semibold hover:bg-blue-700 transform transition hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
    Registreer als Makelaar
  </button>
</form>

<script>
  document.getElementById('registrationForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);
    try {
      const response = await fetch('/api/register-agent', {
        method: 'POST',
        body: formData
      });
      if (response.ok) {
        alert('Bedankt voor uw registratie! We nemen spoedig contact met u op.');
        e.target.reset();
      } else {
        throw new Error('Registration failed');
      }
    } catch (error) {
      alert('Er is een fout opgetreden. Probeer het later opnieuw.');
    }
  });
</script>