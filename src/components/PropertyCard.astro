---
interface Props {
  image: string;
  price: number;
  location: string;
  bedrooms: number;
  bathrooms: number;
  area: number;
}

const { image, price, location, bedrooms, bathrooms, area } = Astro.props;
---
<div class="bg-white shadow-md rounded-lg overflow-hidden">
  <img src={image} alt="Woning" class="w-full h-48 object-cover">
  <div class="p-4">
    <h3 class="text-xl font-semibold">€{price.toLocaleString()}</h3>
    <p class="text-gray-600">{location}</p>
    <div class="mt-2 flex justify-between text-sm text-gray-500">
      <span>{bedrooms} slaapkamers</span>
      <span>{bathrooms} badkamers</span>
      <span>{area} m²</span>
    </div>
    <button class="mt-4 w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600">Meer Info</button>
  </div>
</div>