<form id="leadForm" class="bg-white p-6 rounded-lg shadow-md">
  <h3 class="text-xl font-semibold mb-4">Interesse? Laat uw gegevens achter</h3>
  <div class="mb-4">
    <label for="name" class="block text-gray-700 mb-2">Naam</label>
    <input type="text" id="name" name="name" required class="w-full px-3 py-2 border rounded">
  </div>
  <div class="mb-4">
    <label for="email" class="block text-gray-700 mb-2">E-mail</label>
    <input type="email" id="email" name="email" required class="w-full px-3 py-2 border rounded">
  </div>
  <div class="mb-4">
    <label for="phone" class="block text-gray-700 mb-2">Telefoonnummer</label>
    <input type="tel" id="phone" name="phone" class="w-full px-3 py-2 border rounded">
  </div>
  <div class="mb-4">
    <label for="message" class="block text-gray-700 mb-2">Bericht</label>
    <textarea id="message" name="message" rows="4" class="w-full px-3 py-2 border rounded"></textarea>
  </div>
  <div class="mb-4">
    <label class="flex items-center">
      <input type="checkbox" required class="mr-2">
      <span class="text-sm text-gray-700">Ik ga akkoord met de verwerking van mijn gegevens</span>
    </label>
  </div>
  <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600">Verstuur</button>
</form>

<script>
  document.getElementById('leadForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);
    const response = await fetch('/api/submit-lead', {
      method: 'POST',
      body: formData
    });
    if (response.ok) {
      alert('Bedankt voor uw interesse! We nemen spoedig contact met u op.');
      e.target.reset();
    } else {
      alert('Er is een fout opgetreden. Probeer het later opnieuw.');
    }
  });
</script>